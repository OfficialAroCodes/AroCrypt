{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["node"],
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@Components/*": ["src/Components/*"],
      "@Routes/*": ["src/Routes/*"],
      "@Locales/*": ["src/Locales/*"],
      "@Providers/*": ["src/Providers/*"],
      "@Utils/*": ["src/Utils/*"]
    }
  },
  "include": [
    "src",
    "src/electron.d.ts",
    "electron",
    "src/**/*.ts",
    "src/**/*.tsx",
    "electron/**/*.ts",
    "electron/**/*.tsx",
    "src/global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}